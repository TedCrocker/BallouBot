<Window x:Class="BallouBot.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BallouBot.WPF"
        mc:Ignorable="d"
        Title="BallouBot" Height="350" Width="525">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="171*"/>
			<ColumnDefinition Width="346*"/>
		</Grid.ColumnDefinitions>
		<Button x:Name="btnStartStop" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnStartStop_Click"/>
		<ListBox x:Name="lstConsoleWindow" HorizontalAlignment="Stretch" Margin="10,40,10,10" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.ColumnSpan="2" />

	</Grid>
</Window>
